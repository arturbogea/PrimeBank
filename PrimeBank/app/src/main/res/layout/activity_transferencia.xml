<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/goldenrod"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Transferencia">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_transfer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:text="Saldo Disponivel"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:text="R$45.000,00"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/edit_banco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite o nome do banco"
        android:textColorHint="@color/white"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"/>

    <EditText
        android:id="@+id/edit_ag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite o número da agencia"
        android:textColorHint="@color/white"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"/>

    <EditText
        android:id="@+id/edit_conta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite o número da conta"
        android:textColorHint="@color/white"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"
        android:text="Transferir"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>